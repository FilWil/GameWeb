@model GameWeb.Models.Gallery.UploadScreenshotModel

<div class="container body-content" style="font-family: 'Roboto', sans-serif;">
    <div class="row upload-container">
        <div class="upload-form drop-shadow">
            <form asp-action="UploadNewScreenshot" method="post" enctype="multipart/form-data" id="upload-form" style="color: white;">
                <input asp-for="GameId" type="hidden" value="@Model.GameId"/>
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Tags"></label>
                    <input asp-for="Tags" class="form-control"/>
                </div>
                <div class="form-group">
                    <label class="btn btn-default btn-file">
                        Browse for Screenshot
                        <input type="file" name="file" style="display: none;"/>
                    </label>
                </div>
                <div class="submit">
                    <button type="submit" id="btn-upload" class="btn btn-danger">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>